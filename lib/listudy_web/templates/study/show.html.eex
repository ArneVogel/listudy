  i18n.arrow_type_both = "<%= raw dgettext "study", "Hint type: automatic & pgn" %>";
  i18n.arrow_type_auto = "<%= dgettext "study", "Hint type: automatic" %>";
  i18n.arrow_type_pgn = "<%= dgettext "study", "Hint type: pgn" %>";
  i18n.review_slow = "<%= dgettext "study", "Board reset delay: slow" %>";
  i18n.review_fast = "<%= dgettext "study", "Board reset delay: fast" %>";
  i18n.key_move_enabled = "<%= dgettext "study", "Jump to key move: on" %>";
